<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">


    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@id/txtVwCodi"
                android:text="@string/code_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwCodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@id/txtVwDescripcio"
                android:text="@string/descripcio_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:singleLine="true"
                tools:ellipsize="end"
                tools:maxEms="15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@+id/txtVwStock"
                android:text="@string/stock_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnStockIn"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:contentDescription="@string/btn_stockin"
        app:srcCompat="@mipmap/ic_add_symbol" />

    <ImageView
        android:id="@+id/btnStockOut"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:contentDescription="@string/btnStockOut"
        app:srcCompat="@mipmap/ic_substract_symbol" />

    <ImageView
        android:id="@+id/blankImg"
        android:layout_width="0dp"

        android:layout_height="57dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:contentDescription="@string/blank" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="57dp"

        android:layout_height="57dp"
        android:layout_gravity="end"
        android:contentDescription="@string/btnDelete"
        app:srcCompat="@mipmap/ic_remove_symbol" />


</LinearLayout>