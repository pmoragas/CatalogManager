<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"

    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@+id/txtVwCodiProd"
                android:text="@string/codi_producte_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwCodiProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@+id/txtVwDia"
                android:text="@string/dia_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:labelFor="@+id/txtVwQtat"
                android:text="@string/qty_upper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwQtat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtVwIO"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/blank"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>